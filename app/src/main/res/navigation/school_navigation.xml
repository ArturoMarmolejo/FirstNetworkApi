        <action
            android:id="@+id/action_SchoolsFragment_to_DetailsFragment"
            app:destination="@id/DetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.example.firstnetworkapi.views.DetailsFragment"
        tools:layout="@layout/fragment_satscores"
